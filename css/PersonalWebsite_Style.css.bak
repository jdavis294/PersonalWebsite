*{
	padding: 0;
	margin: 0;
	font-family: 'Playfair Display', serif;
	box-sizing: border-box;
}

.hero{
	
	position: relative;
	width: 100%;
	height: 100vh;
}

nav{
	display: flex;
	width:84%;
	margin: auto;
	padding-top: 10px;
	padding-left: 2%;
	padding-right: 2%;
	align-items: center;
	justify-content: space-between;
	
}

nav ul li{
	display: inline-block;
	list-style: none;
	margin: 10px 20px;
}

nav ul li a{
	text-decoration: none;
	color: black;
	font-size:22px;
	font-weight: bold;
}
nav ul li a:hover{
	color: #EBC42A;
	transition: .4s;
}
h1{
	color: black;
	margin: 20px 0px 20px;
	font-size: 75px;
}
h3{
	color: black;
	font-size: 25px;
	margin-bottom: 50px;
}
h4{
	color:  #EBC42A;
	letter-spacing: 2px;
	font-size: 20px;
}

.content{
	margin: 20px 0px 20px;
	position: absolute;
	top: 50%;
	left:15%;
	transform: translateY(30%);	
}

.btn{
	background-color:#EBC42A;
	color: black;
	text-decoration: none;
	border: 1px solid transparent;
	font-weight: bold;
	padding: 10px 25px;
	border-radius: 30px;
	transition: transform .2s;
}

.btn:hover{
	transform: scale(1.2);
}


span{
	color: #EBC42A;
}

.image{
	width: 50%;
	height: 75%;
	position: absolute;
	bottom:0 ;
	
}
.image img{
	width: 50%;
	transform: translateX(55em);
}
.about{
	width: 100%;
	padding: 80px 0px;
	background-color: #191919;
}
.about img{
	height: auto;
	width: 430px;
}
.about-text{
	width: 550px;
}
.main{
	width: 1130px;
	max-width: 95%;
	margin: 20px auto;
	display: flex;
	align-items: center;
	justify-content: space-around;
}
.about-text h2{
	color: white;
	font-size: 75px;
	text-transform: capitalize;
	margin-bottom: 20px;
}
.about-text h5{
	color: white;
	letter-spacing: 2px;
	font-size: 22px;
	margin-bottom: 25px;
	text-transform: capitalize;
}
.about-text p{
	color: white;
	letter-spacing: 1px;
	line-height: 28px;
	font-size: 18px;
	margin-bottom: 45px;
}
.Experience{
	width: 80%;
	padding: 80px 0px;
}
.experience-box{
	margin: 55px 50px 0px 100px;
	padding: 20px 0px;
	align-items: center;
}
.experience-box h5{
	letter-spacing: 2px;
	font-size: 18px;
}
.experience-box span{
	font-size: 16px;
	font-style: italic;
}
.experience-box pre{
	letter-spacing: 1px;
	line-height: 28px;
	font-size: 18px;
	margin-bottom: 15px;
	padding: 10px 0px;
}
.title h2{
	font-size: 75px;
	width: 1130px;
	margin: 15px auto;
	text-align: center;
}

.projects{
	background: black;
	width: 100%;
	padding: 80px 0px;
}

.projects .title h2{
	color: white;
	font-size: 75px;
	width: 1130px;
	margin: 15px auto;
	text-align: center;
}

.box{
	display: flex;
	justify-content: center;
	align-items: center;
	min-height: 400px;
}
.card{
	height: 365px;
	width: 335px;
	padding: 20px 35px;
	background: white;
	border-radius: 20px;
	margin: 15px;
	position: relative;
	overflow: hidden;
	text-align: center;
}
.card i{
	font-size: 50px;
	display: block;
	margin: 25px 0px;
}
h5{
	color: black;
	font-size: 23px;
	margin-bottom: 15px;
}
.card-info p{
	color: black;
	font-size: 16px;
	line-height: 27px;
	margin-bottom: 25px;
}
.card .button{
	background-color:#EBC42A;
	color: black;
	text-decoration: none;
	border: 2px solid transparent;
	font-weight: bold;
	padding: 9px 22px;
	border-radius: 30px;
	transition: .4s; 
}
.card .button:hover{
	background-color: transparent;
	border: 2px solid #EBC42A;
	cursor: pointer;
}

footer{
	position: relative;
	width: 100%;
	height: 400px;
	background: white;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
footer p:nth-child(1){
	font-size: 30px;
	margin-bottom: 20px;
	font-weight: bold;
}
footer p:nth-child(2){
	font-size: 17px;
	width: 500px;
	text-align: center;
	line-height: 26px;
}
footer h2{
	font-size: 75px;
	width: 1130px;
	margin: 15px auto;
	text-align: center;
}
.social{
	display: flex;
}
.social a{
	width: 45px;
	height: 45px;
	display: flex;
	align-items: center;
	justify-content: center;
	background:#EBC42A;
	border-radius: 50%;
	margin: 22px 10px;
	color: white;
	text-decoration: none;
	font-size: 20px;
}
.social a:hover{
	transform: scale(1.5);
	transition: .3s;
}